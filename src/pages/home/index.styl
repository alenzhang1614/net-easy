
.headerContainer
  position absolute
  left 0
  top 0
  width 100%
  z-index 300
  .header
    background #fff
    width 100%
    height 2rem
    box-sizing border-box
    padding 0 0.5rem
    display flex
    align-items center
    background #fff
    .header-logo
      width 20%
      height 100%
      display flex
      align-items center
      img
        width 100%
    .search-warp
      width 64%
      margin 0 3%
    .header-login
      font-size 0.4rem
      padding 0 0.2rem
      background-color transparent
      -webkit-appearance none
      appearance none
      color #b4282d
      border 1px solid #b4282d
      border-radius 0.1rem
  .menu-container
    position relative
    background-color #fff
    .menuWarp
      overflow hidden
      .menuList
        display flex
        padding-right 1.5rem
        .menuItem
          text-align center
          white-space nowrap
          padding-left 1rem
          display flex
          justify-content center
          align-items center
          height 1.5rem
          a
            font-size 0.7rem
  .arrow
    position absolute
    right 0
    top 0
    height 100%
    background-color #fff
    width 1.5rem
    display flex
    justify-content center
    align-items center
    z-index 500
    img
      width 0.8rem
      transition all 0.5s
  .menu-drop-down-warp
    position absolute
    top 0
    left 0
    background-color #fff
    z-index 400
    .menu-drop-down-title
      font-size 0.8rem
      height 1.5rem
      line-height 1.5rem
      margin-bottom 0.5rem
      margin-left 0.7rem
    .menu-drop-down
      width 100%
      display flex
      flex-wrap wrap
      .menu-drop-down-item
        display flex
        align-items center
        justify-content center
        height 1rem
        margin-bottom 1rem
        margin-left 0.7rem
        .menu-drop-down-text
          display block
          width 3rem
          height 1rem
          line-height 1rem
          text-align center
          background-color #FAFAFA
          border 1px solid #ccc
          font-size 0.5rem
          border-radius 0.1rem
          &.active
            color #b4282d
            border-color #b4282d
.mainWarp
  position absolute
  top 3.5rem
  bottom 2rem
  left 0
  right 0
  overflow hidden
  .mainContainer
    .swiper-container
      background-color #fff
      img
        width 100%
        height 8rem
      .swiper-pagination-bullet
        background #eee
        width 1rem
        height 0.1rem
        border-radius 0.05rem
    .servicePolicyList
      background-color #fff
      height 1.5rem
      font-size 0.5rem
      display flex
      justify-content space-around
      align-items center
      .servicePolicyListItem
        display flex
        align-items center
        .icon
          display block
          width 0.8rem
          height 0.8rem
          background url('http://yanxuan.nosdn.127.net/a03dd909803b9ac032eba58b7253a2f6.png') center center no-repeat
          background-size contain
          &:nth-child(2)
            background url('http://yanxuan.nosdn.127.net/2d0402ffcd52b3ec3b07422681c42a89.png')
          &:nth-child(3)
            background url('http://yanxuan.nosdn.127.net/eb61ee48e8942dbd1784c9ee75ebe955.png')
        .text
          color #666
