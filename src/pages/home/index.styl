.menu-container
  position relative
  .menuWarp
    overflow hidden
    .menuList
      display flex
      padding-right 1.5rem
      .menuItem
        text-align center
        white-space nowrap
        padding-left 1rem
        display flex
        justify-content center
        align-items center
        height 1.5rem
        a
          font-size 0.7rem
  .arrow
    position absolute
    right 0
    top 0
    height 100%
    background-color #fff
    width 1.5rem
    display flex
    justify-content center
    align-items center
    z-index 500
    img
      width 0.8rem
      transition all 0.5s
  .menu-drop-down-warp
    position absolute
    top 0
    left 0
    background-color #fff
    z-index 400
    .menu-drop-down-title
      font-size 0.8rem
      height 1.5rem
      line-height 1.5rem
      margin-bottom 0.5rem
      margin-left 0.7rem
    .menu-drop-down
      width 100%
      display flex
      flex-wrap wrap
      .menu-drop-down-item
        display flex
        align-items center
        justify-content center
        height 1rem
        margin-bottom 1rem
        margin-left 0.7rem
        .menu-drop-down-text
          display block
          width 3rem
          height 1rem
          line-height 1rem
          text-align center
          background-color #FAFAFA
          border 1px solid #ccc
          font-size 0.5rem
          border-radius 0.1rem
          &.active
            color #b4282d
            border-color #b4282d
.swiper-container
  img 
    width 100%
    height 8rem
  .swiper-pagination-bullet
    background #eee
    width 1rem
    height 0.1rem
    border-radius 0.05rem
.servicePolicyList
  height 1.5rem
  font-size 0.5rem
  display flex 
  justify-content space-around
  align-items center
  .servicePolicyListItem
    display flex
    align-items center 
   
    .icon
      display block
      width 0.8rem
      height 0.8rem
      background url("http://yanxuan.nosdn.127.net/a03dd909803b9ac032eba58b7253a2f6.png") center center no-repeat
      background-size contain 
      &:nth-child(2)
        background 	url("http://yanxuan.nosdn.127.net/2d0402ffcd52b3ec3b07422681c42a89.png")
      &:nth-child(3)
        background 	url("http://yanxuan.nosdn.127.net/eb61ee48e8942dbd1784c9ee75ebe955.png")
    .text
      color #666  
.category-warp
  .category-list
    display flex
    flex-wrap wrap
    .category-item
      width 20%
      display flex 
      justify-content center
      align-items center
      font-size 0.5rem
      margin-bottom 0.6rem
      a
        display flex 
        flex-direction column
        align-items center
        font-size 0.5rem
        color #666
        img 
          width 2.5rem
          margin-bottom 0.2rem
.freshMan-container
  width 100%
  box-sizing border-box
  padding 0 0.5rem 1rem
  .freshMan-title
    padding 0.5rem 0
    font-size 1rem
    text-align center 
  .freshmanContent-title
    font-size 0.8rem
    color #333
  .freshmanContent-subtitle
    font-size 0.5rem
    color #666
  .freshMan-content
    overflow hidden
    font-size 0.7rem
    .freshman-left
      box-sizing border-box
      padding 0.5rem 0rem 0rem 0.6rem 
      position relative
      float left
      width 49%
      height 10rem
      background-color #F9E9CF
      img
        position absolute
        width 80%
        left 50%
        top 50%
        transform translate(-50%, -50%)
    .freshman-right
      float right
      width 49%
      height 10rem
      .freshman-right-item
        position relative
        box-sizing border-box 
        padding 0.5rem 0rem 0rem 0.6rem 
        height 4.9rem
        img
          position absolute
          width 4.5rem 
          right 0
          bottom 0
        .price
          position absolute
          right 0.8rem
          top 0.5rem
          width 1.5rem
          height 1.5rem
          background-color #F59524
          opacity 0.9
          border-radius 50%
          font-size 0.5rem
          display flex
          flex-direction column
          justify-content center
          span 
            display block
            text-align center
            &.newPrice
              color #fff
            &.oldPrice
              color #fff
              text-decoration line-through
        &.freshman-off-price
          background #FBE2D3
          margin-bottom 0.2rem
          .freshmanContent-title
            margin-bottom 0.2rem  
        &.freshman-group
          background-color #FFECC2
          .freshmanContent-subtitle
            background-color #CBB693
            padding 0 0.2rem
            color #fff
            border-radius 0.1rem


        
        


