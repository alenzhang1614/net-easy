@import '../../../common/stylus/mixins.styl'
.supplying-list
  display flex
  flex-wrap wrap
  justify-content space-between
  .supplying-item
    position relative
    display block
    font-size 0.5rem
    width 50%
    margin-bottom 0.1rem
    .text
      position absolute
      width 100%
      text-align center
      padding-top 0.5rem
      .text-title
        color #333
        font-size 0.6rem
      .text-des
        height 1rem
        line-height 1rem
        .text-icon
          background-color #CBB693
          padding 0.1rem
          color #fff
          border-radius 0.1rem
          font-size 0.2rem
          margin-left 0.2rem
    img
      width 99%
      height 6rem
