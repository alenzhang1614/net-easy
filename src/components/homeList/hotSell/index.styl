.hotSell
  .hotSellList
    overflow hidden
    margin-bottom -0.15rem
    .classfify-item
      float left
      width 24%
      height 4rem
      font-size 0.5rem
      text-align center
      background #ededed
      margin-right 1%
      margin-bottom 0.15rem
      display flex
      flex-direction column
      align-items center
      justify-content space-around
      color #333
      img
        width 100%
      .imgWrap
        width 70%
        height 60%
      &.big
        position relative
        width 49%
        flex-direction row
        font-size 0.6rem
        &:nth-child(1)
          background-color #F9F3E4
        &:nth-child(2)
          background-color #EBEFF6
        span
          float left
          &:after
            content ''
            display block
            background #333
            height 0.1rem
            margin-top 0.3rem
            width 80%
        .imgWrap
          float right
          width 55%
          height 100%
          display flex
          align-items center
